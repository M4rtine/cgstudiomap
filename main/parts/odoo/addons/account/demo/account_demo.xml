<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        
        <!--
        Fiscal year
        -->    
        
        <record id="data_fiscalyear" model="account.fiscalyear">
            <field eval="'Fiscal Year X '+'2015'" name="name"/>
            <field eval="'FY'+'2015'" name="code"/>
            <field eval="'2015'+'-01-01'" name="date_start"/>
            <field eval="'2015'+'-12-31'" name="date_stop"/>
            <field name="company_id" ref="base.main_company"/>
        </record>
        
