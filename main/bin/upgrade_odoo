#!/usr/bin/python2

import sys
from anybox.recipe.odoo.runtime.session import Session
session = Session(
    '/opt/cgstudiomap/etc/odoo.cfg',
    '/opt/cgstudiomap'
)

import anybox.recipe.odoo.runtime.upgrade

if __name__ == '__main__':
    sys.exit(
        anybox.recipe.odoo.runtime.upgrade.upgrade(
            '/opt/cgstudiomap/upgrade.py',
            'run',
            '/opt/cgstudiomap/etc/odoo.cfg',
            '/opt/cgstudiomap'
        )
    )
