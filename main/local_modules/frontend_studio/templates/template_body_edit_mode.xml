<openerp>
    <data>
        <template id="frontend_studio.save_form" name="Studio: Save Modifications">
            <form t-att-action="'/directory/company/{}/save'.format(partner.id)"
                  enctype="multipart/form-data"
                  method="POST">
                <t t-raw="0"/>
            </form>
        </template>

        <template id="frontend_studio.save_button" name="Studio: Save Button">
            <input type='submit'
                   class="btn btn-edit outline a-submit pull-right"
                   value="Save changes"/>
        </template>

        <template id="frontend_studio.image_block" name="Studio: Block Image">
            <div class="row">
                <!--Display of the current logo of the company-->
                <div class="col-sm-3 col-logo">
                    <t t-call="frontend_base.company_logo" />
                </div>
                <!--If this checkbox is checked, the current logo of the company will be set to nothing -->
                <!--And even if there is a picture selected by the user in the input file, the selected-->
                <!--image will be ignore to reset the logo to the placeholder-->
                <input type="checkbox" name='remove_image' value="remove_image"/>Check to clean current image
                <!--Set the logo of the company to a new logo.-->
                <input type="file" name="image_file" accept="image/*" value="Browse for new logo..."/>
                <!--If none of the input are selected, the current logo remains.-->
            </div>
        </template>

        <template id="frontend_studio.studio_common_edit" name="Studio: Edit Common">
            <div class="form-group">
                <p>
                    <t t-esc="fields['name']['string']"/>
                    <input type="text"
                           name="name"
                           class="search-query form-control"
                           t-att-value="partner.name" />
                </p>
                <p>
                    <t t-esc="fields['state']['string']"/>
                    <select class="form-control" name="state">
                    <t t-foreach="state_selections" t-as="selections">
                        <option t-att-value="selections[0]"
                                t-att-selected="'selected' if selections[0] == partner.state else ''">
                            <t t-esc="selections[1]"/>
                        </option>
                    </t>
                    </select>
                    <!--<input type="state"-->
                           <!--t-att-name="fields['state']['string']"-->
                           <!--class="search-query form-control"-->
                           <!--t-att-value="partner.state" />-->
                </p>
            </div>

        </template>

        <template id="frontend_studio.studio_address_edit" name="Studio: Edit Address">
            <div class="form-group">
                <p>
                    <t t-esc="fields['street']['string']"/>
                    <input type="text"
                           name="street"
                           class="search-query form-control"
                           t-att-value="partner.street" />
                </p>
                <p>
                    <t t-esc="fields['street2']['string']"/>
                    <input type="text"
                           name="street2"
                           class="search-query form-control"
                           t-att-value="partner.street2" />
                </p>
                <p>
                    <t t-esc="fields['city']['string']"/>
                    <input type="text"
                           name="city"
                           class="search-query form-control"
                           t-att-value="partner.city" />
                </p>
                <p>
                    <t t-esc="fields['zip']['string']"/>
                    <input type="text"
                           name="zip"
                           class="search-query form-control"
                           t-att-value="partner.zip" />
                </p>
                <!--<p>-->
                    <!--<t t-esc="fields['state_id']['string']"/>-->
                    <!--<t t-esc="partner.state_id" />,-->
                <!--</p>-->
                <p>
                    <t t-esc="fields['country_id']['string']"/>
                    <select class="form-control" name="country_id">
                        <t t-foreach="countries" t-as="country">
                            <option t-att-value="country.id"
                                    t-att-selected="'selected' if country.id == partner.country_id.id else ''"
                                    >
                                <t t-esc="country.name"/>
                            </option>
                        </t>
                    </select>
                </p>
            </div>
        </template>

        <template id="frontend_studio.studio_links_edit" name="Studio: Edit Links">
            <div class="form-group">
                <p>
                    <t t-esc="fields['website']['string']"/>
                    <input type="url"
                           name="website"
                           class="search-query form-control"
                           t-att-value="partner.website" />
                </p>
                <p>
                    <t t-esc="fields['email']['string']"/>
                    <input type="email"
                           name="email"
                           class="search-query form-control"
                           t-att-value="partner.email" />
                </p>
            </div>
        </template>
        
        <template id="frontend_studio.studio_social_networks_edit" name="Studio: Edit Social Networks">
            <div class="form-group">
                <t t-foreach="social_networks" t-as="social_network">
                    <p>
                        <t t-esc="fields[social_network]['string']"/>
                        <input type="url"
                               t-att-name="social_network"
                               class="search-query form-control"
                               t-att-value="getattr(partner, social_network)" />
                    </p>
                </t>
            </div>
        </template>

        <template id="frontend_studio.studio_calls_edit" name="Studio: Edit Calls">
            <div class="form-group">
                <t t-foreach="calls" t-as="call">
                    <p>
                        <t t-esc="fields[call]['string']"/>
                        <input type="phone"
                               t-att-name="call"
                               class="search-query form-control"
                               t-att-value="getattr(partner, call)" />
                    </p>
                </t>
            </div>
        </template>

        <template id="frontend_studio.studio_industries_edit" name="Studio: Edit Industries">
            <div class="form-group">
                <t t-foreach="industries" t-as="ind">
                    <input type="checkbox"
                           t-att-name='"industry_ids.{0}".format(ind.id)'
                           t-att-value="ind.id"
                           t-att-checked="'checked' if ind in partner.industry_ids else ''"
                    />
                    <t t-esc="ind.name"/>
                </t>
            </div>
        </template>

        <template id="frontend_studio.base_edit" name="Studio: base Edit">
            <t t-call="frontend_base.doctype_html"/>
            <t t-call="frontend_base.html">
                <t t-set="title" t-value="'{} - edit'.format(partner.name)"/>
                <t t-call="frontend_base.full_head"/>
                <link rel="stylesheet" href="/frontend_studio/static/css/studio.css" type="text/css"/>
				<link rel="stylesheet" href="/frontend_studio/static/css/studio-edit.css" type="text/css"/>
                <script type="text/javascript" src="/frontend_studio/static/js/geocharts_marker.js"></script>
                <!-- Generic page styles -->
                <link rel="stylesheet" href="/frontend_studio/static/js/jQuery-File-Upload-9.11.2/css/style.css"/>
                <!-- CSS to style the file input field as button and adjust the Bootstrap progress bars -->
                <link rel="stylesheet" href="/frontend_studio/static/js/jQuery-File-Upload-9.11.2/css/jquery.fileupload.css"/>


                <t t-call="frontend_base.body">
                    <t t-raw="0"/>
                    <footer id="footer_edit" class="footer">
                    <t t-call="frontend_listing.footer_base"/>
					</footer>
                    <t t-call="frontend_base.engine">
                        <!-- The jQuery UI widget factory, can be omitted if jQuery UI is already included -->
                        <script src="/frontend_studio/static/js/jQuery-File-Upload-9.11.2/js/vendor/jquery.ui.widget.js"></script>
                        <!-- The Load Image plugin is included for the preview images and image resizing functionality -->
                        <script src="//blueimp.github.io/JavaScript-Load-Image/js/load-image.all.min.js"></script>
                        <!-- The Canvas to Blob plugin is included for image resizing functionality -->
                        <script src="//blueimp.github.io/JavaScript-Canvas-to-Blob/js/canvas-to-blob.min.js"></script>
                        <!-- Bootstrap JS is not required, but included for the responsive demo navigation -->
                        <script src="//netdna.bootstrapcdn.com/bootstrap/3.2.0/js/bootstrap.min.js"></script>
                        <!-- The Iframe Transport is required for browsers without support for XHR file uploads -->
                        <script src="/frontend_studio/static/js/jQuery-File-Upload-9.11.2/js/jquery.iframe-transport.js"></script>
                        <!-- The basic File Upload plugin -->
                        <script src="/frontend_studio/static/js/jQuery-File-Upload-9.11.2/js/jquery.fileupload.js"></script>
                        <!-- The File Upload processing plugin -->
                        <script src="/frontend_studio/static/js/jQuery-File-Upload-9.11.2/js/jquery.fileupload-process.js"></script>
                        <!-- The File Upload image preview & resize plugin -->
                        <script src="/frontend_studio/static/js/jQuery-File-Upload-9.11.2/js/jquery.fileupload-image.js"></script>
                        <!-- The File Upload audio preview plugin -->
                        <script src="/frontend_studio/static/js/jQuery-File-Upload-9.11.2/js/jquery.fileupload-audio.js"></script>
                        <!-- The File Upload video preview plugin -->
                        <script src="/frontend_studio/static/js/jQuery-File-Upload-9.11.2/js/jquery.fileupload-video.js"></script>
                        <!-- The File Upload validation plugin -->
                        <script src="/frontend_studio/static/js/jQuery-File-Upload-9.11.2/js/jquery.fileupload-validate.js"></script>
                        <script src="/frontend_studio/static/js/jQuery-File-Upload-call.js"></script>
                    </t>
                </t> <!-- closing body -->
            </t> <!-- closing html -->
        </template>

        <template id="frontend_studio.edit" name="Studio: Edit">
            <t t-call="frontend_studio.base_edit">

					<div class="container studio-edit fontCGSM">
						<div class="row">
							<t t-call="frontend_studio.save_form">
							<div class="col-xs-12 col-sm-8">
								<div class="row">
									<div class="col-sm-12">
										<h1>Studio Informations / {- Categories -}</h1>
									</div>
								</div>

								<div class="row">
									<div class="col-sm-12">
										<ul class="nav nav-tabs" role="tablist">
											<li role="presentation" class="active"><a href="#edit01" aria-controls="edit01" role="tab" data-toggle="tab">Common</a></li>
											<li role="presentation"><a href="#edit02" aria-controls="edit02" role="tab" data-toggle="tab">Location</a></li>
											<li role="presentation"><a href="#edit03" aria-controls="edit03" role="tab" data-toggle="tab">Links</a></li>
											<li role="presentation"><a href="#edit04" aria-controls="edit04" role="tab" data-toggle="tab">Socials</a></li>
											<li role="presentation"><a href="#edit05" aria-controls="edit05" role="tab" data-toggle="tab">Calls</a></li>
											<li role="presentation"><a href="#edit06" aria-controls="edit06" role="tab" data-toggle="tab">Industries</a></li>
											<t t-call="frontend_studio.save_button"/>
										</ul>

									</div>
								</div>


								<div class="tab-content edit-form">

									<div role="tabpanel" class="tab-pane fade in active" id="edit01">
										<div class="row">
											<div class="col-sm-12">
												<t t-call="frontend_studio.studio_common_edit"/>
											</div>
											<div class="col-sm-12">
												<t t-call="frontend_studio.image_block"/>
											</div>
										</div>
									</div>


									<div role="tabpanel" class="tab-pane fade" id="edit02">
										<div class="row">
											<div class="col-sm-12">
												<t t-call="frontend_studio.studio_address_edit"/>
											</div>
										</div>
									</div>

									<div role="tabpanel" class="tab-pane fade" id="edit03">
										<div class="row">
											<div class="col-sm-12">
												<t t-call="frontend_studio.studio_links_edit"/>
											</div>
										</div>
									</div>

									<div role="tabpanel" class="tab-pane fade" id="edit04">
										<div class="row">
											<div class="col-sm-12">
												<t t-call="frontend_studio.studio_social_networks_edit"/>
											</div>
										</div>
									</div>

									<div role="tabpanel" class="tab-pane fade" id="edit05">
										<div class="row">
											<div class="col-sm-12">
												<t t-call="frontend_studio.studio_calls_edit"/>
											</div>
										</div>
									</div>

									<div role="tabpanel" class="tab-pane fade" id="edit06">
										<div class="row">
											<div class="col-sm-12">
												<t t-call="frontend_studio.studio_industries_edit"/>
											</div>
										</div>
									</div>
								</div>


							</div>
							</t>

							<div class="col-sm-4 sidebar-studio-edit hidden-xs">
								<div class="row">
									<div class="col-sm-12">
										<h1>{- Studio Name -}</h1>
										<p>{- last update date -}</p>
									</div>
								</div>
								<div class="row">
									<div class="col-sm-12">
										<h2>{- Categories -} information</h2>
										<i>{- Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec aliquet ex dui, quis ornare ante vulputate ac. Nulla facilisi. Cras id lacus neque. Mauris hendrerit lectus eu nibh consequat ullamcorper. In lectus justo, elementum non mauris a, volutpat auctor nulla. -}</i>
									</div>
								</div>
							</div>
						</div>
					</div>

            </t>

        </template>
    </data>
</openerp>