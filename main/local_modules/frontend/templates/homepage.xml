<template id="homepage_public_user" name="Homepage: public user" page="True" priority="29">
    <t t-call="frontend_base.doctype_html"/>
    <t t-call="frontend_base.html">
        <t t-call="frontend_base.full_head">
        </t>

        <body id="home">

                    <div class="navbar navbar-default navbar-fixed-top sticky" role="navigation">
                        <div class="container">
                            <div class="navbar-header">
                                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-top-collapse">
