<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="frontend.partner" name="Frontend: partner" page="True">
            <t t-call="website.layout">
                <div class="modal-content" style="margin:30px">
                    <div id="wrap">
                        <div class="oe_structure"/>
                        <div class="container">
                            <div>
                                <img itemprop="image" class="img img-responsive" t-att-src="website.image_url(partner, 'image_small')" />
                                <h1 t-esc="partner.name"/>
                            </div>
                            <!--Basic details of companies-->
                            <div>
                                <div>
                                    <span>Address:</span>
                                    <span t-esc="partner.street"/>
                                </div>
                                <div>
                                    <span>Address2:</span>
                                    <span t-esc="partner.street2"/>
                                </div>
                                <div>
                                    <span>city:</span>
                                    <span t-esc="partner.city"/>
                                </div>
                                <div>
                                    <span>state:</span>
                                    <span t-esc="partner.state_id.name"/>
                                </div>
                                <div>
                                    <span>zip:</span>
                                    <span t-esc="partner.zip"/>
                                </div>
                                <div>
                                    <span>country:</span>
                                    <span t-esc="partner.country_id.name"/>
                                </div>
                                <div>
                                <t t-foreach="partner.industry_ids" t-as="ind">
                                    <a itemprop="name" t-att-href="'/directory?search=%s' % ind.name">
                                        <span class="label label-default" t-esc="ind.name"/>
                                    </a>
                                </t>
                                </div>
                            </div>
                            <!--Links to the directory to help the user to find more studios-->
                            <!--Also helps the SEO of the website-->
                            <div>
                                <t t-if="same_name">
                                <div>
                                    <a itemprop="name" t-att-href="'/directory?search=%s' % partner.name">
                                        <span t-esc="same_name"/> other <span t-esc="'company' if same_name == 1 else 'companies'"/> with the same name.

                                    </a>
                                </div>
                                </t>
                                <t t-if="same_country">
                                <div>
                                    <a itemprop="name" t-att-href="'/directory?search=%s' % partner.country_id.name">
                                        <span t-esc="same_country"/> other <span t-esc="'company' if same_country == 1 else 'companies'"/> from the same country.
                                    </a>
                                </div>
                                </t>
                                <t t-if="same_city">
                                    <div>
                                        <a itemprop="name" t-att-href="'/directory?search=%s' % partner.city">
                                            <span t-esc="same_city"/> other <span t-esc="'company' if same_city == 1 else 'companies'"/> from <span t-esc="partner.city"/>.
                                        </a>
                                    </div>
                                </t>
                            </div>
                            <!--If user logged, tell him to go to the dashboard-->
                            <!--If not login boy!-->
                            <div>
                                <t t-if="request.uid !=  %(base.public_user)d">
                                    <p><a t-attf-href="/web" class="btn btn-warning sign-up pull-right"><strong>Go to dashboard</strong></a></p>
                                </t>
                                <t t-if="request.uid ==  %(base.public_user)d">
                                    <p><a t-attf-href="/web/signup" class="btn btn-warning sign-up pull-right"><strong>Sign up Boy for more details!</strong></a></p>
                                </t>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <template id="frontend.search" name="Search hidden fields">
            <form t-att-action="keep('/directory', search=0)" method="get" t-att-class="search_class">

                <t t-if="attrib_values">
                    <t t-foreach="attrib_values" t-as="a">
                        <input type="hidden" name="attrib" t-att-value="'%s-%s' % (a[0], a[1])"/>
                    </t>
                </t>
                <div class="input-group">
                    <input type="text" name="search" class="search-query form-control" placeholder="Search..." t-att-value="search"/>
                    <span class="input-group-btn">
                        <a class="btn btn-default a-submit"><i class="fa fa-search"/></a>
                    </span>
                </div>

            </form>
            <a href="/web/signup">Sign up for more options. It is free!</a>
        </template>

        <template id="frontend.partners" name="Partners">
            <t t-call="website.layout">
                <t t-set="additional_title">Directory</t>
                <div id="wrap" class="js_sale">
                    <div class="oe_structure"/>
                    <div class="container oe_website_sale">
                        <div class="products_pager">
                            <div class="row" style="width: 100%;">
                                <t t-call="frontend.search"><t t-set="search_class">pagination form-inline col-md-3</t></t>
                                <t t-call="website.pager"/>
                            </div>
                        </div>
                        <div class='row'>
                            <div class="hidden" id="products_grid_before"></div>
                            <div class="col-md-12" id="products_grid">
                                <table width="100%">
                                    <tbody>
                                        <tr t-ignore="true">
                                            <td t-foreach="range(0,rows)" t-as="row" t-attf-width="#{100/rows}%"></td>
                                        </tr>
                                        <tr t-foreach="bins" t-as="tr_partner">
                                            <t t-foreach="tr_partner" t-as="td_partner">
                                                <t t-if="td_partner">
                                                    <t t-set="partner" t-value="td_partner['product']"/>
                                                    <td t-att-colspan="td_partner['x'] != 1 and td_partner['x']"
                                                        t-att-rowspan="td_partner['y'] != 1 and td_partner['y']"
                                                        t-attf-class="oe_product oe_grid oe-height-#{td_partner['y']*2} #{ td_partner['class'] }">

                                                        <div class="oe_product_cart">
                                                            <t t-call="frontend.partner_card"/>
                                                        </div>

                                                    </td>
                                                </t>
                                                <td t-if="not td_partner" class="oe-height-2"/>
                                            </t>
                                        </tr>
                                    </tbody>
                                </table>
                                <t t-if="not bins">
                                    <div class="text-center text-muted">
                                        <h3 class="css_editable_display">No product defined.</h3>
                                        <t groups="base.group_website_publisher">
                                            <p groups="base.group_sale_manager">Use the <i>'Content'</i> top menu to create a new product.</p>
                                        </t>
                                    </div>
                                </t>
                            </div>
                        </div>
                        <div class="products_pager">
                            <t t-call="website.pager"/>
                        </div>
                    </div>
                    <div class="oe_structure mb32"/>
                </div>
            </t>
        </template>



    </data>
</openerp>
