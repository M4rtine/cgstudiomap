<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <!--The members of the group will only see the res.partners that are tagged computer graphics-->
        <!--The domain about the is_company = False is here to avoid to fail when the system test a user-->
        <!--and its related partner.-->
        <record id="ir_rule_filter_partner_by_cg" model="ir.rule">
            <field name="name">Filter Computer Graphics Partners</field>
            <field name="model_id" ref="base.model_res_partner"/>
            <field name="domain_force">['|', ('computer_graphics_rule','=', True), ('is_company', '=', False)]</field>
            <field name="groups" eval="[(4, ref('res_group_computer_graphics.group_computer_graphics'))]"/>
        </record>
    </data>
</openerp>